<% content_for :title, "Login - Dealo" %>

<div class="auth-container">
  <div class="auth-header">
    <h2>Login to Dealo</h2>
    <p>Welcome back! Please sign in to your account.</p>
  </div>

  <% if alert %>
    <div class="alert alert-alert"><%= alert %></div>
  <% end %>

  <% if notice %>
    <div class="alert alert-notice"><%= notice %></div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <div class="password-field-wrapper">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter your password", id: "user_password_login" %>
        <label class="show-password-label">
          <%= check_box_tag "show_password_login", "1", false, class: "show-password-checkbox", "data-target": "user_password_login" %>
          Show password
        </label>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Remember me" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Login", class: "btn-auth" %>
    </div>
  <% end %>

  <div class="auth-links">
    <p>Don't have an account? <%= link_to "Sign up here", new_user_registration_path %></p>
    <%= link_to "Forgot your password?", new_user_password_path %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.show-password-checkbox').forEach(function(cb) {
      cb.addEventListener('change', function() {
        var target = document.getElementById(this.getAttribute('data-target'));
        if (target) target.type = this.checked ? 'text' : 'password';
      });
    });
  });
</script>
