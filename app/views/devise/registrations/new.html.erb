<% content_for :title, "Sign Up - Dealo" %>

<div class="auth-container">
  <div class="auth-header">
    <h2>Create Your Account</h2>
    <p>Join Dealo and start buying and selling today!</p>
  </div>

  <% if alert %>
    <div class="alert alert-alert"><%= alert %></div>
  <% end %>

  <% if resource.errors.any? %>
    <div class="alert alert-alert">
      <h3><%= pluralize(resource.errors.count, "error") %> prohibited this account from being created:</h3>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
    <div class="field">
      <%= f.label :name, "Full Name" %>
      <%= f.text_field :name, autofocus: true, placeholder: "John Doe" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "your@email.com" %>
    </div>

    <div class="field">
      <%= f.label :phone, "Phone Number" %>
      <%= f.telephone_field :phone, placeholder: "+353 123 456 789" %>
    </div>

    <div class="field">
      <%= f.label :location, "County" %>
      <%= f.select :location, options_for_select(irish_counties.map { |c| [c, c] }, resource.location), { prompt: "Select a county" }, { class: "auth-form-select" } %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class="password-field-wrapper">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Choose a strong password", id: "user_password_signup" %>
        <label class="show-password-label">
          <%= check_box_tag "show_password_signup", "1", false, class: "show-password-checkbox", "data-target": "user_password_signup user_password_confirmation_signup" %>
          Show password
        </label>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm your password", id: "user_password_confirmation_signup" %>
    </div>

    <div class="field verified-seller-signup-option">
      <label class="verified-seller-signup-row">
        <%= check_box_tag "verified_seller_interest", "1", false, class: "verified-seller-signup-checkbox" %>
        <span class="verified-seller-signup-label-text">I want to become a Verified Seller — golden badge + 3 free ad boosts every month (€1.99/month).</span>
      </label>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up", class: "btn-auth" %>
    </div>
  <% end %>

  <div class="auth-links">
    <p>Already have an account? <%= link_to "Login here", new_user_session_path %></p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.show-password-checkbox').forEach(function(cb) {
      cb.addEventListener('change', function() {
        var ids = (this.getAttribute('data-target') || '').split(/\s+/);
        ids.forEach(function(id) {
          var target = document.getElementById(id);
          if (target) target.type = cb.checked ? 'text' : 'password';
        });
      });
    });
  });
</script>
