<% content_for :title, "Payment successful - Dealo" %>
<div class="static-page">
  <div class="container static-page-container">
    <h1 class="static-page-title">Payment successful</h1>
    <div class="static-page-content">
      <% if @success_type.present? %>
        <p class="static-lead"><%= @message %></p>
        <% if @success_type == "boost" && @listing %>
          <p><%= link_to "View your listing", @listing, class: "btn-place-ad", style: "display: inline-block; margin-top: 0.5rem;" %></p>
        <% end %>
        <p><%= link_to "Back to home", root_path, class: "static-link" %></p>
      <% else %>
        <p class="static-lead"><%= @message %></p>
        <p><%= link_to "Back to home", root_path, class: "static-link" %></p>
      <% end %>
    </div>
  </div>
</div>
