<% content_for :title, "#{@user.name || @user.email} - Profile" %>

<div class="user-profile-page">
  <div class="container">
    <div class="profile-header">
      <div class="profile-avatar">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "avatar-image" %>
        <% else %>
          <div class="avatar-placeholder">
            <%= (@user.name || @user.email).first.upcase %>
          </div>
        <% end %>
      </div>
      <div class="profile-info">
        <div class="profile-name-rating">
          <h1><%= @user.name || @user.email %><% if @user.is_verified %> <span class="verified-badge" title="Verified Seller">‚úì Verified</span><% end %></h1>
          <% if @user.reviews_count > 0 %>
            <div class="user-rating">
              <div class="stars">
                <% average = @user.average_rating %>
                <% 5.times do |i| %>
                  <% if i < average.floor %>
                    <span class="star filled">‚òÖ</span>
                  <% elsif i < average %>
                    <span class="star half">‚òÖ</span>
                  <% else %>
                    <span class="star">‚òÖ</span>
                  <% end %>
                <% end %>
              </div>
              <span class="rating-text"><%= average %> (<%= @user.reviews_count %> <%= @user.reviews_count == 1 ? 'review' : 'reviews' %>)</span>
            </div>
          <% else %>
            <div class="user-rating">
              <div class="stars">
                <span class="star">‚òÖ</span>
                <span class="star">‚òÖ</span>
                <span class="star">‚òÖ</span>
                <span class="star">‚òÖ</span>
                <span class="star">‚òÖ</span>
              </div>
              <span class="rating-text">No reviews yet</span>
            </div>
          <% end %>
        </div>
        <% if @user.location.present? %>
          <p class="profile-location">üìç <%= @user.location %></p>
        <% end %>
        <% if @user.phone.present? %>
          <p class="profile-phone">üìû <%= link_to @user.phone, "tel:#{@user.phone.gsub(/\s+/, '')}", class: "phone-number-link", title: "Tap or click to call" %></p>
        <% end %>
        <p class="profile-joined">Member since <%= @user.created_at.strftime("%B %Y") %></p>
        <% if user_signed_in? && current_user == @user && !@user.is_verified %>
          <p class="profile-verified-cta">
            <%= link_to "Get Verified Seller (‚Ç¨2/month)", verified_seller_path, class: "btn-verified-seller", data: { turbo: "false" } %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="profile-stats">
      <div class="stat-item">
        <div class="stat-number"><%= @listings.count %></div>
        <div class="stat-label">Active Listings</div>
      </div>
      <div class="stat-item">
        <div class="stat-number"><%= @user.reviews_count %></div>
        <div class="stat-label">Reviews</div>
      </div>
    </div>

    <!-- Reviews Section -->
    <% if user_signed_in? && current_user != @user %>
      <div class="review-section">
        <h2>Leave a Review</h2>
        <% if @user_review %>
          <div class="existing-review">
            <p>You already reviewed this user:</p>
            <div class="review-display">
              <div class="stars">
                <% @user_review.rating.times do %>
                  <span class="star filled">‚òÖ</span>
                <% end %>
                <% (5 - @user_review.rating).times do %>
                  <span class="star">‚òÖ</span>
                <% end %>
              </div>
              <% if @user_review.comment.present? %>
                <p class="review-comment"><%= @user_review.comment %></p>
              <% end %>
            </div>
          </div>
        <% else %>
          <%= form_with model: [@user, @review], local: true, class: "review-form" do |form| %>
            <div class="review-rating">
              <label>Rating: <span style="color: red;">*</span></label>
              <div class="star-rating">
                <% (1..5).each do |rating| %>
                  <%= form.radio_button :rating, rating, id: "rating_#{rating}", class: "star-input", required: true %>
                  <label for="rating_<%= rating %>" class="star-label">
                    ‚òÖ
                  </label>
                <% end %>
              </div>
            </div>
            <div class="review-comment-field">
              <%= form.label :comment, "Comment (optional):" %>
              <%= form.text_area :comment, rows: 4, placeholder: "Share your experience with this user...", class: "review-textarea" %>
            </div>
            <%= form.submit "Submit Review", class: "btn-submit-review" %>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <!-- All Reviews -->
    <% if @reviews.any? %>
      <div class="reviews-section">
        <h2>Reviews (<%= @reviews.count %>)</h2>
        <div class="reviews-list">
          <% @reviews.each do |review| %>
            <div class="review-item">
              <div class="review-header">
                <div class="reviewer-info">
                  <strong><%= review.reviewer.name || review.reviewer.email %></strong>
                  <span class="review-date"><%= review.created_at.strftime("%B %d, %Y") %></span>
                </div>
                <div class="stars">
                  <% review.rating.times do %>
                    <span class="star filled">‚òÖ</span>
                  <% end %>
                  <% (5 - review.rating).times do %>
                    <span class="star">‚òÖ</span>
                  <% end %>
                </div>
              </div>
              <% if review.comment.present? %>
                <p class="review-comment"><%= review.comment %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="profile-listings">
      <h2>Listings by <%= @user.name || @user.email %></h2>
      
      <% if @listings.any? %>
        <div class="listings-grid">
          <% @listings.each do |listing| %>
            <div class="listing-card">
              <div class="listing-image">
                <% if listing.images.attached? %>
                  <%= image_tag listing.ordered_images.first, class: "listing-card-image" %>
                <% else %>
                  <div class="image-placeholder">
                    <span>üì∑</span>
                  </div>
                <% end %>
              </div>
              <div class="listing-content">
                <h3 class="listing-title">
                  <%= link_to listing.title, listing, class: "listing-link" %>
                </h3>
                <p class="listing-location">üìç <%= listing.city || "Location not specified" %></p>
                <div class="listing-footer">
                  <span class="listing-price">
                    <% if listing.price %>
                      ‚Ç¨<%= number_with_delimiter(listing.price.to_i) %>
                    <% else %>
                      Price on request
                    <% end %>
                  </span>
                  <%= link_to "View", listing, class: "btn-view" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <p>This user hasn't posted any listings yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const starInputs = document.querySelectorAll('.star-input');
    const starLabels = document.querySelectorAll('.star-label');
    
    starInputs.forEach(function(input, index) {
      input.addEventListener('change', function() {
        // Reset all stars
        starLabels.forEach(function(label) {
          label.style.color = '#ddd';
        });
        
        // Fill stars up to and including the selected one
        const selectedRating = parseInt(input.value);
        for (let i = 0; i < selectedRating; i++) {
          if (starLabels[i]) {
            starLabels[i].style.color = '#FFD700';
          }
        }
      });
      
      // Also handle on click to ensure it works
      const label = starLabels[index];
      if (label) {
        label.addEventListener('click', function() {
          // The radio button will be checked by the label click
          setTimeout(function() {
            const selectedRating = parseInt(input.value);
            starLabels.forEach(function(lbl, idx) {
              if (idx < selectedRating) {
                lbl.style.color = '#FFD700';
              } else {
                lbl.style.color = '#ddd';
              }
            });
          }, 10);
        });
      }
    });
  });
</script>
