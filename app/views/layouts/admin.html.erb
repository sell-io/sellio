<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin - Dealo" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="admin-body">
    <header class="admin-header">
      <div class="admin-header-inner">
        <%= link_to "Dealo Admin", admin_root_path, class: "admin-brand" %>
        <nav class="admin-nav">
          <%= link_to "Dashboard", admin_root_path, class: "admin-nav-link" %>
          <%= link_to "Users", admin_users_path, class: "admin-nav-link" %>
          <%= link_to "Listings", admin_listings_path, class: "admin-nav-link" %>
          <%= link_to "View Site", root_path, class: "admin-nav-link", target: "_blank" %>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "admin-nav-btn" %>
        </nav>
      </div>
    </header>

    <main class="admin-main">
      <% if flash[:notice] %>
        <div class="admin-flash admin-flash-notice"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div class="admin-flash admin-flash-alert"><%= flash[:alert] %></div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
